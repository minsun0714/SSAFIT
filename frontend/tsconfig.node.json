{
  "extends": "@tsconfig/node22/tsconfig.json",
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["vite/client", "node"]
  }
}
